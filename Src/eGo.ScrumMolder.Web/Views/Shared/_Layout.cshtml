<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @if (!eGo.ScrumMolder.Web.Properties.Settings.Default.IsLocal) { 
        <link  href="http://fonts.googleapis.com/css?family=Sigmar+One:regular" rel="stylesheet" type="text/css" />
    }

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/custom/milk.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    @*@MvcMiniProfiler.MiniProfiler.RenderIncludes()*@
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/scrummolder/ego.scrummolder.web.js")" type="text/javascript"></script>
    
    @RenderSection("HeaderContent", false)
    
</head>
<body>
<div class="preloader">
    <h1>Loading...</h1>
</div>
        <header>
        <div class="main-width">
            <h1 id="logo"><a href="#">Scrum Molder</a></h1>
            
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            
            <div class="clear"></div>

            <nav>
                <ul id="menu">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>*@
                    
                    <li><a href="@Url.Action("DailyScrum", "Home")"><span>Daily Scrum</span></a></li>
                    <li><a href="@Url.Action("Index", "Bug")"><span>Bugs</span></a></li>
                    <li><a href="@Url.Action("Dashboard", "Home")"><span>Dashboard</span></a></li>
                    <li><a href="@Url.Action("Report", "Report")"><span>Report</span></a></li>
                    <li><a href="@Url.Action("MyAccount", "Account")"><span>My Account</span></a></li>
                    
                </ul>
            </nav>
            </div>
        </header>

        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <br />
            @DateTime.Now.Year © eGo Creative Media Solutions
        </footer>

</body>
</html>
